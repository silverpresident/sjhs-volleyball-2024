@inherits Microsoft.AspNetCore.Components.LayoutComponentBase

<div class="page">
    <main>
        @Body
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-info">
                    <p>&copy; @DateTime.Now.Year ST JAGO VOLLEYBALL RALLY. All rights reserved.</p>
                </div>
                <div class="footer-links">
                    <a href="https://stjago.edu.jm" target="_blank">School Website</a>
                    <span class="separator">|</span>
                    <a href="mailto:volleyball@stjago.edu.jm">Contact</a>
                </div>
            </div>
        </div>
    </footer>
</div>

<style>
    :root {
        /* Theme Colors */
        --primary-color: #006400;    /* Green */
        --secondary-color: #ffd700;  /* Gold */
        --text-color: #333;
        --background-color: #f8f9fa;
        --border-color: #dee2e6;
        --footer-bg: #333;
        --footer-text: #fff;
    }

    .page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background-color: var(--background-color);
    }

    main {
        flex: 1;
        padding: 1rem;
    }

    .footer {
        background-color: var(--footer-bg);
        color: var(--footer-text);
        padding: 1.5rem 0;
        margin-top: 2rem;
    }

    .container {
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        text-align: center;
    }

    .footer-links {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .footer-links a {
        color: var(--footer-text);
        text-decoration: none;
        transition: color 0.2s;
    }

    .footer-links a:hover {
        color: var(--secondary-color);
    }

    .separator {
        color: var(--footer-text);
        opacity: 0.5;
    }

    @@media (min-width: 768px) {
        .footer-content {
            flex-direction: row;
            justify-content: space-between;
            text-align: left;
        }
    }
</style>
