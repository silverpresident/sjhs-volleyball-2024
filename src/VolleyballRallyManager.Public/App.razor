<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(VolleyballRallyManager.Public.Components.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(VolleyballRallyManager.Public.Components.MainLayout)">
            <div class="not-found">
                <h1>404 - Page Not Found</h1>
                <p>Sorry, there's nothing at this address.</p>
                <a href="" class="btn btn-primary">Return Home</a>
            </div>
        </LayoutView>
    </NotFound>
</Router>

<style>
    .not-found {
        text-align: center;
        padding: 4rem 1rem;
    }

    .not-found h1 {
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .not-found p {
        color: var(--text-color);
        margin-bottom: 2rem;
    }

    .btn {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
        border: none;
    }

    .btn-primary:hover {
        background-color: var(--secondary-color);
        color: var(--text-color);
        transform: translateY(-2px);
    }
</style>
