@model VolleyballRallyManager.Lib.Models.Team

@{
    ViewData["Title"] = "Delete Team";
}

<div class="container">
    <h1>Delete Team</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this team?</h4>
        <p>This action cannot be undone. Deleting a team will only be possible if it has no associated matches.</p>
    </div>

    <div class="row">
        <div class="col-md-8"> 

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
            </form>
        </div>
    </div>
</div>
