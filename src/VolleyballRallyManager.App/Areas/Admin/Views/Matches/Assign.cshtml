@model VolleyballRallyManager.App.Areas.Admin.Models.MatchAssignViewModel

@{
    ViewData["Title"] = "Assign Match Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-calendar-check"></i> Assign Match #@Model.MatchNumber
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Division:</strong> @Model.DivisionName<br/>
                                <strong>Round:</strong> @Model.RoundName
                            </div>
                            <div class="col-md-6">
                                <strong>@Model.HomeTeamName</strong> vs <strong>@Model.AwayTeamName</strong>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Assign" method="post">
                        <input type="hidden" asp-for="MatchId" />
                        <input type="hidden" asp-for="MatchNumber" />
                        <input type="hidden" asp-for="HomeTeamName" />
                        <input type="hidden" asp-for="AwayTeamName" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ScheduledTime" class="form-label"></label>
                            <input asp-for="ScheduledTime" type="datetime-local" class="form-control" step="60" />
                            <span asp-validation-for="ScheduledTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourtLocation" class="form-label"></label>
                            <input asp-for="CourtLocation" class="form-control" list="courtList" />
                            <datalist id="courtList">
                                @foreach (var court in Model.AvailableCourts)
                                {
                                    <option value="@court">@court</option>
                                }
                            </datalist>
                            <span asp-validation-for="CourtLocation" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RefereeName" class="form-label"></label>
                            <input asp-for="RefereeName" class="form-control" />
                            <span asp-validation-for="RefereeName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ScorerName" class="form-label"></label>
                            <input asp-for="ScorerName" class="form-control" />
                            <span asp-validation-for="ScorerName" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
