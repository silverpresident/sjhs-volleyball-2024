@model VolleyballRallyManager.App.Areas.Admin.Models.EditTournamentRoundViewModel

@{
    ViewData["Title"] = "Edit Round";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-pencil"></i> Edit Round</h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Details
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Round Configuration</h5>
        </div>
        <div class="card-body">
            @if (Model.IsFinished)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-lock"></i> <strong>Warning:</strong> This round is finalized and cannot be edited.
                </div>
            }

            <!-- Display Tournament and Division Info -->
            <div class="alert alert-info">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Tournament:</dt>
                    <dd class="col-sm-8"><strong>@Model.TournamentName</strong></dd>
                    
                    <dt class="col-sm-4">Division:</dt>
                    <dd class="col-sm-8"><strong>@Model.DivisionName</strong></dd>
                    
                    <dt class="col-sm-4">Round:</dt>
                    <dd class="col-sm-8"><strong>@Model.RoundName</strong> <span class="badge bg-primary">Round @Model.RoundNumber</span></dd>
                    
                    <dt class="col-sm-4">Teams in Division:</dt>
                    <dd class="col-sm-8"><strong>@Model.TotalTeamsInDivision</strong></dd>

                    <dt class="col-sm-4">Round Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.HasTeams)
                        {
                            <span class="badge bg-success">Teams Assigned</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">No Teams</span>
                        }
                        @if (Model.HasMatches)
                        {
                            <span class="badge bg-success">Matches Generated</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">No Matches</span>
                        }
                    </dd>
                </dl>
            </div>

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="TournamentId" />
                <input type="hidden" asp-for="DivisionId" />
                <input type="hidden" asp-for="RoundId" />
                <input type="hidden" asp-for="RoundNumber" />
                <input type="hidden" asp-for="IsFinished" />
                <input type="hidden" asp-for="HasTeams" />
                <input type="hidden" asp-for="HasMatches" />

                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-grid-3x3"></i> Group Configuration</h6>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Configuration Type <span class="text-danger">*</span></label>
                            <select asp-for="GroupConfigurationType" class="form-select" id="groupConfigType" 
                                    disabled="@Model.IsFinished">
                                <option value="TeamsPerGroup">Teams per group</option>
                                <option value="GroupsInRound">Groups in round</option>
                                <option value="NoGroup">No Group</option>
                            </select>
                            <span asp-validation-for="GroupConfigurationType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="GroupConfigurationValue" class="form-label">
                                <span id="configLabel">Value</span> <span class="text-danger">*</span>
                            </label>
                            <input asp-for="GroupConfigurationValue" type="number" class="form-control" 
                                    id="groupConfigValue"
                                    min="2" max="@(Model.TotalTeamsInDivision / 2 + 1)"
                                    disabled="@Model.IsFinished" />
                            <span asp-validation-for="GroupConfigurationValue" class="text-danger"></span>
                            <div class="form-text">
                                Minimum: 2, Maximum: @(Model.TotalTeamsInDivision / 2 + 1)
                            </div>
                        </div>
                    </div>
                </div>

                <h6 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-gear"></i> Round Settings</h6>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="AdvancingTeamSelectionStrategy" class="form-label">
                                Team Selection Method <span class="text-danger">*</span>
                            </label>
                            <select asp-for="AdvancingTeamSelectionStrategy" class="form-select" disabled="@Model.IsFinished">
                                <option value="Manual">Manual - Select teams manually</option>
                                <option value="TopByPoints">Top By Points - Best teams overall</option>
                                <option value="SeedTopHalf">Seed Top Half - Top 50% of teams</option>
                                <option value="WinnersOnly">Winners Only - Only rank 1 teams</option>
                                <option value="TopFromGroupAndNextBest">Top From Group And Next Best</option>
                            </select>
                            <span asp-validation-for="AdvancingTeamSelectionStrategy" class="text-danger"></span>
                            <div class="form-text">How teams will be selected for subsequent rounds</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MatchGenerationStrategy" class="form-label">
                                Match Generation Strategy <span class="text-danger">*</span>
                            </label>
                            <select asp-for="MatchGenerationStrategy" class="form-select" disabled="@Model.IsFinished">
                                <option value="RoundRobin">Round Robin - All teams play each other</option>
                                <option value="SeededBracket">Seeded Bracket - Elimination format</option>
                                <option value="Manual">Manual - Create matches manually</option>
                                <option value="Swiss">Swiss - Swiss system</option>
                                <option value="GroupStageKnockout">Group Stage Knockout</option>
                            </select>
                            <span asp-validation-for="MatchGenerationStrategy" class="text-danger"></span>
                            <div class="form-text">How matches will be generated for this round</div>
                        </div>
                    </div>
                </div>

                <div class="rowAdvancingTeamsCount          <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="AdvancingTeamsCount" class="form-label">
                              AdvancingTeamsCounting <span class="text-danger">*</span>
                            </label>
                            <input asp-for="AdvancingTeamsCount" type="number" class="form-contrAdvancingTeamsCount                                   disabled="@Model.IsFinished" />
                            <span asp-validation-for="AdvancingTeamsCount" class="text-danger"></span>
                            <div class="form-text">Number of teams that will advance to the next round</div>
                        </div>
                    </div>
                </div>

                @if (!Model.IsFinished)
                {
                    <h6 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-lightning"></i> Immediate Actions</h6>

                    <div class="row">
                      
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="AssignTeamsNow" type="checkbox" class="form-check-input" id="assignTeams" checked="@Model.HasTeams"/>
                                    <label class="form-check-label" for="assignTeams">
                                        <strong>Assign teams now</strong>
                                        <div class="form-text">Execute team selection immediately after saving</div>
                                    </label>
                                </div>
                            </div>
                        
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="GenerateMatchesNow" type="checkbox" class="form-check-input" id="generateMatches" checked="@Model.HasMatches"/>
                                    <label class="form-check-label" for="generateMatches">
                                        <strong>Generate matches now</strong>
                                        <div class="form-text">Redirect to match generation after saving</div>
                                    </label>
                                </div>
                            </div>
                        
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    @if (!Model.IsFinished)
                    {
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
        const $groupConfigType = $('#groupConfigType');
        const $configLabel = $('#configLabel');
        const $configValue = $('#groupConfigValue');
            // Update label based on configuration type selection
            function updateConfigLabel() {
                var configType = $('#groupConfigType').val();
                if (configType === 'NoGroup') {
                    $configLabel.text('Group Configuration');
                    $configValue.prop('disabled', true);
                    $configValue.val(0);
                } else if (configType === 'TeamsPerGroup') {
                    $configLabel.text('Teams per group');
                    $configValue.prop('disabled', false);
                } else {
                    $configLabel.text('Groups in round');
                    $configValue.prop('disabled', false);
                }
            }
            
            $('#groupConfigType').on('change', updateConfigLabel);
            updateConfigLabel(); // Initialize on page load
        });
    </script>
}
