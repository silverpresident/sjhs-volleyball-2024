@model VolleyballRallyManager.App.Areas.Admin.Models.CreateNextRoundViewModel

@{
    ViewData["Title"] = "Generate Next Round";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-arrow-right-circle"></i> Generate Next Round</h1>
        <a asp-action="Details" asp-route-id="@Model.PreviousTournamentRoundId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Round
        </a>
    </div>

    <div class="row">
        <!-- LEFT COLUMN: Main Form -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Round Configuration</h5>
                </div>
                <div class="card-body">
                    <!-- Display Tournament and Division Info -->
                    <div class="alert alert-info">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Tournament:</dt>
                            <dd class="col-sm-8"><strong>@Model.TournamentName</strong></dd>
                            
                            <dt class="col-sm-4">Division:</dt>
                            <dd class="col-sm-8"><strong>@Model.DivisionName</strong></dd>
                            
                            <dt class="col-sm-4">Previous Round:</dt>
                            <dd class="col-sm-8"><strong>@Model.PreviousRoundName</strong> <span class="badge bg-success">Finalized</span></dd>
                        </dl>
                    </div>

                    <form asp-action="GenerateNextRound" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="TournamentId" />
                        <input type="hidden" asp-for="DivisionId" />
                        <input type="hidden" asp-for="PreviousTournamentRoundId" />
                        <input type="hidden" asp-for="CurrentRoundId" />

                        <!-- Round Selection -->
                        <div class="mb-4">
                            <label asp-for="RoundId" class="form-label">
                                <i class="bi bi-trophy"></i> Select Round Type <span class="text-danger">*</span>
                            </label>
                            <select asp-for="RoundId" class="form-select" asp-items='@((SelectList)ViewData["Rounds"])' id="roundSelector">
                                <option value="">-- Select Round --</option>
                            </select>
                            <span asp-validation-for="RoundId" class="text-danger"></span>
                            <div class="form-text">Select which round this will be (e.g., Quarter Finals, Semi Finals, etc.)</div>
                        </div>

                        <hr class="my-4" />

                        <!-- ============================================= -->
                        <!-- SECTION 1: TEAMS QUALIFYING FOR THIS ROUND -->
                        <!-- ============================================= -->
                        <div class="card mb-4 border-primary">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-arrow-down-circle"></i> Teams Qualifying For This Round
                                    <small class="float-end">Qualifying Configuration</small>
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted mb-3">
                                    <i class="bi bi-info-circle"></i> Configure how teams will be selected from the previous round to participate in this round.
                                </p>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="QualifyingTeamsCount" class="form-label fw-bold">
                                                Qualifying Teams Count <span class="text-danger">*</span>
                                            </label>
                                            <input asp-for="QualifyingTeamsCount" type="number" class="form-control" min="2" />
                                            <span asp-validation-for="QualifyingTeamsCount" class="text-danger"></span>
                                            <div class="form-text">Number of teams entering this round from previous round</div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="QualifyingTeamSelectionStrategy" class="form-label fw-bold">
                                                Qualifying Team Selection Strategy <span class="text-danger">*</span>
                                            </label>
                                            <select asp-for="QualifyingTeamSelectionStrategy" class="form-select" asp-items="Html.GetEnumSelectList<VolleyballRallyManager.Lib.Models.TeamSelectionStrategy>()">
                                            </select>
                                            <span asp-validation-for="QualifyingTeamSelectionStrategy" class="text-danger"></span>
                                            <div class="form-text">How teams are selected from previous round</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ============================================= -->
                        <!-- SECTION 2: TEAMS ADVANCING TO NEXT ROUND -->
                        <!-- ============================================= -->
                        <div class="card mb-4 border-warning">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0">
                                    <i class="bi bi-arrow-up-circle"></i> Teams Advancing to Subsequent Round
                                    <small class="float-end">Destination Configuration</small>
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted mb-3">
                                    <i class="bi bi-gear"></i> Configure how teams from THIS round will advance to the NEXT round.
                                </p>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="AdvancingTeamsCount" class="form-label">
                                                Number of Teams <span class="text-danger">*</span>
                                            </label>
                                            <input asp-for="AdvancingTeamsCount" type="number" class="form-control" min="2" />
                                            <span asp-validation-for="AdvancingTeamsCount" class="text-danger"></span>
                                            <div class="form-text">Minimum: 2 teams</div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="AdvancingTeamSelectionStrategy" class="form-label">
                                                Method of Selection <span class="text-danger">*</span>
                                            </label>
                                            <select asp-for="AdvancingTeamSelectionStrategy" class="form-select">
                                                <option value="TopByPoints">Top By Points</option>
                                                <option value="SeedTopHalf">Seed Top Half</option>
                                                <option value="WinnersOnly">Winners Only</option>
                                                <option value="TopFromGroupAndNextBest">Top From Group And Next Best</option>
                                                <option value="Manual">Manual</option>
                                            </select>
                                            <span asp-validation-for="AdvancingTeamSelectionStrategy" class="text-danger"></span>
                                            <div class="form-text">How to select teams for subsequent round</div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="MatchGenerationStrategy" class="form-label">
                                                Match Generation Strategy <span class="text-danger">*</span>
                                            </label>
                                            <select asp-for="MatchGenerationStrategy" class="form-select">
                                                <option value="SeededBracket">Seeded Bracket</option>
                                                <option value="RoundRobin">Round Robin</option>
                                                <option value="Manual">Manual</option>
                                                <option value="Swiss">Swiss</option>
                                                <option value="GroupStageKnockout">Group Stage Knockout</option>
                                            </select>
                                            <span asp-validation-for="MatchGenerationStrategy" class="text-danger"></span>
                                            <div class="form-text">How matches will be generated</div>
                                        </div>
                                    </div>
                                </div>

                                <h6 class="border-bottom pb-2 mb-3 mt-3"><i class="bi bi-grid-3x3"></i> Group Configuration (Optional)</h6>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Configuration Type</label>
                                            <select asp-for="GroupConfigurationType" class="form-select" id="groupConfigType">
                                                <option value="NoGroup">No Group</option>
                                                <option value="TeamsPerGroup">Teams per group</option>
                                                <option value="GroupsInRound">Groups in round</option>
                                            </select>
                                            <span asp-validation-for="GroupConfigurationType" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="GroupConfigurationValue" class="form-label">
                                                <span id="configLabel">Teams per group</span>
                                            </label>
                                            <input asp-for="GroupConfigurationValue" type="number" class="form-control" min="2" id="groupConfigValue" />
                                            <span asp-validation-for="GroupConfigurationValue" class="text-danger"></span>
                                            <div class="form-text">Minimum: 2 (disabled when "No Group" is selected)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ============================================= -->
                        <!-- IMMEDIATE WORKFLOW EXECUTION FLAGS -->
                        <!-- ============================================= -->
                        <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-lightning-fill"></i> Immediate Actions</h6>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="AssignTeamsNow" type="checkbox" class="form-check-input" id="assignTeams" />
                                    <label class="form-check-label" for="assignTeams">
                                        <strong>Assign teams now</strong>
                                        <div class="form-text">Execute SelectTeams workflow immediately after creating the round</div>
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="GenerateMatchesNow" type="checkbox" class="form-check-input" id="generateMatches" />
                                    <label class="form-check-label" for="generateMatches">
                                        <strong>Generate matches now</strong>
                                        <div class="form-text">Redirect to match generation after creating and assigning teams</div>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Helpful Information Box -->
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title"><i class="bi bi-info-circle"></i> Team Selection Methods</h6>
                                <ul class="mb-0 small">
                                    <li><strong>Top By Points:</strong> Selects teams with the most points from the previous round</li>
                                    <li><strong>Seed Top Half:</strong> Selects the top 50% of teams (capped by Teams Advancing)</li>
                                    <li><strong>Winners Only:</strong> Selects only teams that achieved rank 1 in their groups</li>
                                    <li><strong>Top From Group And Next Best:</strong> Takes the top team from each group plus best remaining teams</li>
                                    <li><strong>Manual:</strong> You manually select teams through the UI</li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Details" asp-route-id="@Model.PreviousTournamentRoundId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Create Next Round
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN: Round Setup Recommendations -->
        <div class="col-lg-4">
            @await Html.PartialAsync("_RoundSetupRecommendations")
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src="~/js/generate-next-round.js"></script>
}
