@model VolleyballRallyManager.App.Areas.Admin.Models.CreateNextRoundViewModel

@{
    ViewData["Title"] = "Generate Next Round";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-arrow-right-circle"></i> Generate Next Round</h1>
        <a asp-action="Details" asp-route-id="@Model.PreviousTournamentRoundId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Round
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Next Round Configuration</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="bi bi-lightbulb"></i> <strong>Previous Round:</strong> @Model.PreviousRoundName
                <br />
                Teams will be automatically selected from the previous round based on your selection method.
            </div>

            <form asp-action="GenerateNextRound" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="TournamentId" />
                <input type="hidden" asp-for="DivisionId" />
                <input type="hidden" asp-for="PreviousTournamentRoundId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="RoundId" class="form-label">
                                Round <span class="text-danger">*</span>
                            </label>
                            <select asp-for="RoundId" class="form-select" asp-items='@((SelectList)ViewData["Rounds"])'>
                                <option value="">-- Select Round --</option>
                            </select>
                            <span asp-validation-for="RoundId" class="text-danger"></span>
                            <div class="form-text">Select which round this will be (e.g., Quarter Finals, Semi Finals, etc.)</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TeamsAdvancing" class="form-label">
                                Teams Advancing <span class="text-danger">*</span>
                            </label>
                            <input asp-for="TeamsAdvancing" type="number" class="form-control" min="0" />
                            <span asp-validation-for="TeamsAdvancing" class="text-danger"></span>
                            <div class="form-text">Number of teams that will advance from this round</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TeamSelectionMethod" class="form-label">
                                Team Selection Method <span class="text-danger">*</span>
                            </label>
                            <select asp-for="TeamSelectionMethod" class="form-select">
                                <option value="TopByPoints">Top By Points - Best teams overall</option>
                                <option value="SeedTopHalf">Seed Top Half - Top 50% of teams</option>
                                <option value="WinnersOnly">Winners Only - Only rank 1 teams</option>
                                <option value="TopFromGroupAndNextBest">Top From Group And Next Best</option>
                                <option value="Manual">Manual - Select teams manually</option>
                            </select>
                            <span asp-validation-for="TeamSelectionMethod" class="text-danger"></span>
                            <div class="form-text">How teams will be selected from the previous round</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MatchGenerationStrategy" class="form-label">
                                Match Generation Strategy <span class="text-danger">*</span>
                            </label>
                            <select asp-for="MatchGenerationStrategy" class="form-select">
                                <option value="SeededBracket">Seeded Bracket - Elimination format</option>
                                <option value="RoundRobin">Round Robin - All teams play each other</option>
                                <option value="Manual">Manual - Create matches manually</option>
                                <option value="Swiss">Swiss - Swiss system</option>
                                <option value="GroupStageKnockout">Group Stage Knockout</option>
                            </select>
                            <span asp-validation-for="MatchGenerationStrategy" class="text-danger"></span>
                            <div class="form-text">How matches will be generated for this round</div>
                        </div>
                    </div>
                </div>

                <div class="card bg-light mb-3">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-info-circle"></i> Team Selection Methods Explained</h6>
                        <ul class="mb-0">
                            <li><strong>Top By Points:</strong> Selects the teams with the most points</li>
                            <li><strong>Seed Top Half:</strong> Selects the top 50% of teams (capped by Teams Advancing)</li>
                            <li><strong>Winners Only:</strong> Selects only teams that achieved rank 1</li>
                            <li><strong>Top From Group And Next Best:</strong> Takes the top team from each group plus best remaining</li>
                            <li><strong>Manual:</strong> You manually select teams through the UI</li>
                        </ul>
                    </div>
                </div>

                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> <strong>Important:</strong> After creating the next round, 
                    you will be redirected to automatically select teams. The previous round will be locked.
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Details" asp-route-id="@Model.PreviousTournamentRoundId" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle"></i> Create Next Round
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
