@model VolleyballRallyManager.Lib.Models.TournamentRoundDetailsViewModel

@{
    ViewData["Title"] = $"Round Details - {Model.CurrentRound.Round?.Name}";
    string scheduledTimeFormat = Model.Tournament.IsMultiDay ? "MMM dd, HH:mm" : "HH:mm";

}


<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-trophy"></i> @Model.CurrentRound.Round?.Name
            -
            @Html.DisplayFor(modelItem => Model.CurrentRound.Division, "Division")
        </h1>
        <div>
            @if (!Model.CurrentRound.IsFinished)
            {
                <a asp-action="Edit" asp-route-id="@Model.CurrentRound.Id" class="btn btn-custom">
                    <i class="bi bi-pencil"></i> Edit Round
                </a>
            }
            <a asp-action="Index" asp-route-tournamentId="@Model.CurrentRound.TournamentId" asp-route-divisionId="@Model.CurrentRound.DivisionId"
               class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Rounds
            </a>
            @if (Model.PreviousRound != null)
            {
                <a asp-action="Details" asp-route-id="@Model.PreviousRound.Id" class="btn btn-secondary">
                    <i class="bi bi-arrow-up"></i> Previous Round
                </a>
            }
            @if (Model.CurrentRound.NextTournamentRoundId != null)
            {
                <a asp-action="Details" asp-route-id="@Model.CurrentRound.NextTournamentRoundId" class="btn btn-secondary">
                    <i class="bi bi-arrow-down"></i> Next Round
                </a>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between text-bg-primary">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Round Information
                        @if (Model.CurrentRound.IsPlayoff)
                        {
                            <span class="badge bg-info">playoff</span>
                        }
                    </h5>
                    <span class="badge text-bg-warning">@Model.CurrentRound.RoundNumber</span>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Tournament:</dt>
                        <dd class="col-sm-7">@Model.CurrentRound.Tournament?.Name</dd>

                        <dt class="col-sm-5">Qualifying for this round:</dt>
                        <dd class="col-sm-7"><span class="badge bg-info">@Model.CurrentRound.AdvancingTeamSelectionStrategy</span></dd>

                        <dt class="col-sm-5">Match Strategy:</dt>
                        <dd class="col-sm-7"><span class="badge bg-warning text-dark">@Model.CurrentRound.MatchGenerationStrategy</span></dd>

                        <dt class="col-sm-5">Teams Advancing:</dt>
                        <dd class="col-sm-7">@Model.CurrentRound.AdvancingTeamsCount <span class="badge bg-info">@Model.CurrentRound.AdvancingTeamSelectionStrategy</span></dd>

                        <dt class="col-sm-5">Status:</dt>
                        <dd class="col-sm-7">
                            @if (Model.CurrentRound.IsFinished)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Finished</span>
                            }
                            else if (Model.CurrentRound.IsLocked)
                            {
                                <span class="badge bg-warning"><i class="bi bi-lock"></i> Locked</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary"><i class="bi bi-hourglass"></i> In Progress</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Round Statistics</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Total Teams:</dt>
                        <dd class="col-sm-7"><strong>@Model.Teams.Count</strong></dd>

                        <dt class="col-sm-5">Total Matches:</dt>
                        <dd class="col-sm-7"><strong>@Model.Matches.Count</strong></dd>

                        <dt class="col-sm-5">Completed Matches:</dt>
                        <dd class="col-sm-7"><strong>@Model.Matches.Count(m => m.IsFinished)</strong></dd>

                        <dt class="col-sm-5">Pending Matches:</dt>
                        <dd class="col-sm-7"><strong>@Model.Matches.Count(m => !m.IsFinished)</strong></dd>

                        <dt class="col-sm-5">Disputed Matches:</dt>
                        <dd class="col-sm-7">
                            @{
                                var disputedCount = Model.Matches.Count(m => m.IsDisputed);
                            }
                            @if (disputedCount > 0)
                            {
                                <span class="badge bg-danger fs-6"><i class="bi bi-exclamation-triangle"></i> @disputedCount</span>
                            }
                            else
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> 0</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Completion:</dt>
                        <dd class="col-sm-7">
                            @if (Model.Matches.Any())
                            {
                                var percent = (double)Model.Matches.Count(m => m.IsFinished) / Model.Matches.Count * 100;
                                <div class="progress">
                                    <div class="progress-bar @(percent == 100 ? "bg-success" : "bg-primary")"
                                         role="progressbar"
                                         style="width: @percent%">
                                        @Math.Round(percent, 0)%
                                    </div>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No matches</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group" role="group">
                <!-- Edit Button -->
                @if (!Model.CurrentRound.IsFinished)
                {
                    <a asp-action="Edit" asp-route-id="@Model.CurrentRound.Id" class="btn btn-custom">
                        <i class="bi bi-pencil"></i> Edit Round
                    </a>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" disabled title="Cannot edit a finalized round">
                        <i class="bi bi-pencil"></i> Edit Round
                    </button>
                }

                <!-- Select Teams Button -->
                @if (Model.CanSelectTeams)
                {
                    <a asp-action="SelectTeams" asp-route-id="@Model.CurrentRound.Id" class="btn btn-custom">
                        <i class="bi bi-people"></i> Select Teams
                    </a>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" disabled
                            title="@(Model.CurrentRound.PreviousTournamentRoundId.HasValue ? "Previous round must be finalized first" : "Teams already assigned or not applicable")">
                        <i class="bi bi-people"></i> Select Teams
                    </button>
                }

                <!-- Generate Matches Button -->
                @if (Model.CanGenerateMatches)
                {
                    <a asp-action="GenerateMatches" asp-route-id="@Model.CurrentRound.Id" class="btn btn-warning">
                        <i class="bi bi-calendar-plus"></i> Generate Matches
                    </a>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" disabled title="Teams must be assigned first or matches already generated">
                        <i class="bi bi-calendar-plus"></i> Generate Matches
                    </button>
                }
                <!-- View Matches Button -->
                <a asp-controller="Matches" asp-action="Index" asp-route-RoundId="@Model.CurrentRound.Id" class="btn btn-custom">
                    <i class="bi bi-calendar-plus"></i> View Matches
                </a>


                <!-- Finalize Round Button -->
                @if (Model.CanFinalize)
                {
                    <form asp-action="FinalizeRound" asp-route-id="@Model.CurrentRound.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success"
                                onclick="return confirm('Finalize this round? This will calculate rankings and lock the round.');">
                            <i class="bi bi-check-circle"></i> Finalize Round
                        </button>
                    </form>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" disabled title="@(Model.CurrentRound.IsFinished ? "Round already finalized" : "All matches must be completed first")">
                        <i class="bi bi-check-circle"></i> Finalize Round
                    </button>
                }
                @if (Model.CurrentRound.IsLocked)
                {
                    <form asp-action="UnfinalizeRound" asp-route-id="@Model.CurrentRound.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning"
                                onclick="return confirm('Unlock this round? This will unlock the round and re-calculate rankings.');">
                            <i class="bi bi-check-circle"></i> Unlock Round
                        </button>
                    </form>
                }
                <!-- Create Next Round Button (Quick) -->
                @if (Model.CanGenerateNextRound)
                {
                    <a asp-action="CreateNextRound" asp-route-id="@Model.CurrentRound.Id" class="btn btn-success" title="Quick create with defaults">
                        <i class="bi bi-plus-circle"></i> Create Next Round
                    </a>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" disabled title="Round must be finalized first">
                        <i class="bi bi-plus-circle"></i> Create Next Round
                    </button>
                }
@* 
                <!-- Generate Next Round Button (Full Configuration) -->
                @if (Model.CanGenerateNextRound)
                {
                    <a asp-action="GenerateNextRound" asp-route-id="@Model.CurrentRound.Id" class="btn btn-outline-success" title="Configure all settings upfront">
                        <i class="bi bi-gear"></i> Generate Next Round
                    </a>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" disabled title="Round must be finalized first">
                        <i class="bi bi-gear"></i> Generate Next Round
                    </button>
                } *@

                <!-- Create Playoff Round Button -->
                @if (Model.ShowCreatePlayoffRound)
                {
                    <a asp-action="CreatePlayoffRound" asp-route-id="@Model.CurrentRound.Id" class="btn btn-warning">
                        <i class="bi bi-trophy"></i> Create Playoff Round
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Team Rankings -->
    @if (Model.Teams.Any())
    {
        <div class="card mb-4">
            <div class="card-header bg-dark text-white d-flex justify-content-between">
                <h5 class="mb-0"><i class="bi bi-list-ol"></i> Team Rankings</h5>

                <!-- Rank Teams Button -->
                @if (!Model.CurrentRound.IsFinished && Model.Matches.Any())
                {
                    <form asp-action="RankTeams" asp-route-id="@Model.CurrentRound.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-info"
                                onclick="return confirm('Update team rankings based on current match results?');">
                            <i class="bi bi-sort-numeric-down"></i> Rank Teams
                        </button>
                    </form>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" disabled title="@(Model.CurrentRound.IsFinished ? "Round is finalized" : "No matches available")">
                        <i class="bi bi-sort-numeric-down"></i> Rank Teams
                    </button>
                }
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Seed</th>
                                <th>Rank</th>
                                <th>Team</th>
                                @if (Model.ShowTeamGroup == true)
                                {
                                    <th>Group</th>
                                }
                                <th>Played</th>
                                <th>W-D-L</th>
                                <th>Points</th>
                                <th>Sets</th>
                                <th>Set Diff</th>
                                <th>Score</th>
                                <th>Score Diff</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var team in Model.Teams)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@team.SeedNumber</span></td>
                                    <td>
                                        @Html.DisplayFor(modelItem => team.Rank, "Rank")
                                    </td>
                                    <td><strong>@team.TeamName</strong></td>

                                    @if (Model.ShowTeamGroup == true)
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => team.GroupName, "Group")
                                        </td>
                                    }
                                    <td>@team.MatchesPlayed</td>
                                    <td>@team.Wins-@team.Draws-@team.Losses</td>
                                    <td><strong>@team.Points</strong></td>
                                    <td>@team.SetsFor-@team.SetsAgainst</td>
                                    <td>
                                        <span class="@(team.SetsDifference > 0 ? "text-success" : team.SetsDifference < 0 ? "text-danger" : "")">
                                            @(team.SetsDifference > 0 ? "+" : "")@team.SetsDifference
                                        </span>
                                    </td>
                                    <td>@team.ScoreFor-@team.ScoreAgainst</td>
                                    <td>
                                        <span class="@(team.ScoreDifference > 0 ? "text-success" : team.ScoreDifference < 0 ? "text-danger" : "")">
                                            @(team.ScoreDifference > 0 ? "+" : "")@team.ScoreDifference
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Matches -->
    @if (Model.Matches.Any())
    {
        <div class="card">
            <div class="card-header text-bg-primary d-flex justify-content-between">
                <h5 class="mb-0"><i class="bi bi-calendar3"></i> Matches (@Model.Matches.Count)</h5>

                <!-- View Matches Button -->
                <a asp-controller="Matches" asp-action="Index" asp-route-RoundId="@Model.CurrentRound.Id" class="btn btn-custom">
                    <i class="bi bi-calendar-plus"></i> View Matches
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Match #</th>
                                <th>Home Team</th>
                                <th>Score</th>
                                <th>Away Team</th>
                                <th>Court</th>
                                <th>Scheduled</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var match in Model.Matches.OrderBy(m => m.MatchNumber))
                            {
                                //TODO this should be total points
                                ScorePairRecord score = new ScorePairRecord { HomeTeamScore = match.HomeTeamScore, AwayTeamScore = match.AwayTeamScore };
                                <tr class="@(match.IsFinished ? "" : "table-warning")">
                                    <td>
                                        <strong>#@match.MatchNumber</strong>
                                        @Html.DisplayFor(modelItem => match.GroupName, "Group")
                                    </td>
                                    <td>@match.HomeTeam?.Name</td>
                                    <td>
                                        @if (match.IsFinished)
                                        {
                                            <strong>@match.HomeTeamScore - @match.AwayTeamScore</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">vs</span>
                                        }
                                    </td>
                                    <td>@match.AwayTeam?.Name</td>
                                    <td>@match.CourtLocation</td>
                                    <td>@match.ScheduledTime.ToString(scheduledTimeFormat)</td>
                                    <td>
                                        @* @if (match.IsFinished)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Complete</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark"><i class="bi bi-hourglass"></i> Pending</span>
                                        } *@
                                        @if (match.IsDisputed == true)
                                        {
                                            <span class="badge bg-danger" title="This match has been disputed"><i class="bi bi-exclamation-triangle"></i></span>
                                        }
                                        @Html.DisplayFor(modelItem => match.MatchState, "MatchState")
                                        @Html.DisplayFor(modelItem => score, "ScorePairRecord")
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Matches" asp-action="Details" asp-route-id="@match.Id"
                                           class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-area="Admin" asp-controller="Matches" asp-action="Scorer" asp-route-id="@match.Id"
                                           class="btn btn-sm btn-warning">
                                            <i class="bi bi-calculator"></i> Score
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
