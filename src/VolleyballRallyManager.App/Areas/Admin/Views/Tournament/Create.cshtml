@model VolleyballRallyManager.Lib.Models.Tournament

@{
    ViewData["Title"] = "Create Tournament";
}

<form asp-action="Create">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">@ViewData["Title"]</h1>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentDate" class="control-label"></label>
                <input asp-for="TournamentDate" class="form-control" type="date" />
                <span asp-validation-for="TournamentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationUrl" class="control-label"></label>
                <input asp-for="RegistrationUrl" class="form-control" type="url" placeholder="https://example.com/register" />
                <span asp-validation-for="RegistrationUrl" class="text-danger"></span>
                <small class="form-text text-muted">Optional: URL for tournament registration (will be displayed on public page)</small>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" />
                    @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <input type="submit" value="Create" class="btn btn-custom" />
                <a asp-action="Index" class="btn btn-sm btn-light">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
