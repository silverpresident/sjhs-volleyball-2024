@model VolleyballRallyManager.App.Areas.Admin.Models.CreateUserViewModel
@{
    ViewData["Title"] = "Add New User";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Add New User
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Email Address -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-1"></i>Email Address
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                This will be used as the username for login
                            </small>
                        </div>

                        <!-- Display Name -->
                        <div class="mb-3">
                            <label asp-for="DisplayName" class="form-label fw-semibold">
                                <i class="fas fa-user me-1"></i>Display Name
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="DisplayName" class="form-control" placeholder="John Doe" />
                            <span asp-validation-for="DisplayName" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                The name that will be displayed in the system
                            </small>
                        </div>

                        <!-- Role Assignment -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-user-shield me-1"></i>Assign Roles
                            </label>
                            <div class="card bg-light">
                                <div class="card-body">
                                    @if (ViewBag.AvailableRoles != null && ((List<string>)ViewBag.AvailableRoles).Any())
                                    {
                                        @foreach (var role in (List<string>)ViewBag.AvailableRoles)
                                        {
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox"
                                                       name="SelectedRoles" value="@role" id="role_@role">
                                                <label class="form-check-label" for="role_@role">
                                                    <strong>@role</strong>
                                                    @switch (role)
                                                    {
                                                        case "Administrator":
                                                            <br>
                                            
                                                            <small class="text-muted">Full access to all features including user management</small>
                                                            break;
                                                        case "Judge":
                                                            <br>
                                            
                                                            <small class="text-muted">Can manage matches and scores</small>
                                                            break;
                                                        case "Scorekeeper":
                                                            <br>

                                                            <small class="text-muted">Can update scores only</small>
                                                            break;
                                                        case "Announcer":
                                                            <br>

                                                            <small class="text-muted">Can update announcements only</small>
                                                            break;
                                                    }
                                                </label>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-0">No roles available</p>
                                    }
                                </div>
                            </div>
                            <small class="form-text text-muted">
                                Select one or more roles for this user
                            </small>
                        </div>

                        <!-- Info Box -->
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>Important Information
                            </h6>
                            <ul class="mb-0">
                                <li>A secure temporary password will be automatically generated</li>
                                <li>The user's email will be automatically confirmed</li>
                                <li>You should securely share the temporary password with the user</li>
                                <li>The user should change their password upon first login</li>
                            </ul>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-user-plus me-1"></i>Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Help -->
            <div class="card border-primary mt-4">
                <div class="card-header text-bg-primary">
                    <i class="fas fa-question-circle me-2"></i>Need Help?
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>User Roles Explained:</strong></p>
                    <ul class="mb-0">
                        <li><strong>Administrator:</strong> Has full control over the system including user management, tournaments, and all other features</li>
                        <li><strong>Judge:</strong> Can create and manage tournaments, matches, and update scores</li>
                        <li><strong>Scorekeeper:</strong> Limited access to update match scores only</li>
                        <li><strong>Announcer:</strong> Can update announcements only</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 