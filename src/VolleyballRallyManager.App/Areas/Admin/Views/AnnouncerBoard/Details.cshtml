@model VolleyballRallyManager.Lib.Models.Announcement

@{
    ViewData["Title"] = "Announcement Details";
    var history = ViewBag.History as IEnumerable<VolleyballRallyManager.Lib.Models.AnnouncementHistoryLog>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-custom py-3">
                    <h3 class="mb-0 text-white"><i class="bi bi-megaphone-fill me-2"></i>@Model.Title</h3>
                </div>
                <div class="card-body text-center py-5">
                    <div class="display-4 fw-bold text-dark mb-0" style="word-wrap: break-word;">
                        @Model.Content
                    </div>
                </div>
                <div class="card-footer bg-light border-top-0 py-3">
                    <div class="row align-items-center">
                        <div class="col-md-12">
                            <div class="d-flex flex-wrap gap-4 justify-content-center text-muted small">
                                <div>
                                    <span class="fw-bold text-uppercase">Priority:</span>
                                    @switch (Model.Priority)
                                    {
                                        case VolleyballRallyManager.Lib.Models.AnnouncementPriority.Urgent:
                                            <span class="badge bg-danger">Urgent</span>
                                            break;
                                        case VolleyballRallyManager.Lib.Models.AnnouncementPriority.Info:
                                            <span class="badge bg-info text-dark">Info</span>
                                            break;
                                        case VolleyballRallyManager.Lib.Models.AnnouncementPriority.Routine:
                                            <span class="badge bg-secondary">Routine</span>
                                            break;
                                    }
                                </div>
                                <div>
                                    <span class="fw-bold text-uppercase">Queue Position:</span> #@Model.SequencingNumber
                                </div>
                                <div>
                                    <span class="fw-bold text-uppercase">Remaining Repeats:</span> @Model.RemainingRepeatCount
                                </div>
                                <div>
                                    <span class="fw-bold text-uppercase">Announced:</span> @Model.AnnouncedCount times
                                </div>
                                <div>
                                    <span class="fw-bold text-uppercase">Last Called:</span> 
                                    @if (Model.LastAnnouncementTime.HasValue)
                                    {
                                        @Model.LastAnnouncementTime.Value.ToLocalTime().ToString("MM/dd HH:mm:ss")
                                    }
                                    else
                                    {
                                        <span class="font-italic">Never</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-4 d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to Board
                </a>
                <form asp-action="Call" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-megaphone me-1"></i> Call Now
                    </button>
                </form>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Call History</h5>
                </div>
                <div class="card-body p-0">
                    @if (history != null && history.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var log in history.OrderByDescending(l => l.Timestamp))
                            {
                                <div class="list-group-item py-3">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            <span class="fw-medium">Called</span>
                                        </div>
                                        <small class="text-muted">
                                            @log.Timestamp.ToLocalTime().ToString("MMM dd, HH:mm:ss")
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-muted text-center">
                            <i class="bi bi-inbox fs-1 mb-3 d-block opacity-25"></i>
                            <p class="mb-0">No history recorded yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
