@model VolleyballRallyManager.App.Models.TournamentDetailsViewModel

@{
    ViewData["Title"] = "Active Tournament";
}

<h1>@Model.Tournament?.Name</h1>

<!-- Division and Round Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header bg-success text-white d-flex justify-content-between">
                <h5 class="mb-0">Division Statistics</h5>
                <div class="btn-group">
                    <a class="btn btn-sm btn-warning" asp-action="SelectDivisions">Select Divisions</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Divisions != null && Model.Divisions.Any())
                {
                    <partial name="_DivisionsPartial" model="Model.Divisions" />
                }
                else
                {
                    <p class="text-muted">No divisions are currently active for this tournament.</p>
                }
            </div>
        </div>
        <div class="card">
            <div class="card-header d-flex justify-content-between" style="background-color: #ffc107;">
                <h5 class="mb-0">Round Progress</h5>
                <div class="btn-group">
                    <a class="btn btn-sm btn-dark" asp-controller="TournamentRounds"><i class="bi bi-trophy"></i> Rounds</a>
                    <a class="btn btn-sm btn-success" asp-controller="Matches"><i class="bi bi-calendar-event"></i> Matches</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Rounds != null && Model.Rounds.Any())
                {
                    <partial name="_RoundsPartial" model="Model.Rounds" />
                }
                else
                {
                    <p class="text-muted">No rounds scheduled for this tournament.</p>
                }
            </div>
        </div>
    </div>

    <!-- Teams and Detailed Information -->
        <div class="col-md-5">
            <!-- Tournament Management Card -->
            <div class="card mb-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-gear-fill"></i> Tournament Management</h5>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-6">
                            <a class="btn btn-outline-primary w-100" asp-action="SelectDivisions">
                                <i class="bi bi-collection"></i> Set Divisions
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-outline-success w-100" asp-controller="TournamentTeams" asp-action="BulkAssign">
                                <i class="bi bi-list-check"></i> Select Teams
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-outline-warning w-100" asp-controller="TournamentTeams" asp-action="AutoSeed">
                                <i class="bi bi-shuffle"></i> Seed Teams
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-outline-dark w-100" asp-controller="TournamentRounds" asp-action="Index">
                                <i class="bi bi-trophy"></i> Tournament Rounds
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-outline-secondary w-100" asp-controller="Matches" asp-action="Index">
                                <i class="bi bi-calendar-event"></i> View Matches
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-outline-success w-100" asp-controller="TournamentTeams" asp-action="Index">
                                <i class="bi bi-play-circle"></i> View Teams
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Teams Card -->
            <div class="card">
            <div class="card-header bg-primary d-flex justify-content-between">
                    <h2>
                    Teams
                </h2>
                    <span class="btn-group" role="group" aria-label="Divisions">
                        <a class="btn btn-primary" asp-controller="TournamentTeams">Tournament Teams</a>
                    </span>
                </div>
                <div class="card-body">
                    @if (Model.Teams != null && Model.Teams.Any())
                    {
                        var teamsByDivision = Model.Teams.GroupBy(t => t.Division.Name);
                        foreach (var divisionGroup in teamsByDivision)
                        {
                            <div class="card mb-2">
                                <div class="card-header">
                                    @divisionGroup.Key
                                </div>
                                <ul class="list-group list-group-flush">
                                    @foreach (var team in divisionGroup.OrderBy(t => t.GroupName).ThenBy(t => t.Team.Name))
                                    {
                                        <li class="list-group-item">
                                            <span class="badge bg-secondary">@team.GroupName</span>
                                            @team.Team.Name
                                            <small>(@team.Team.School)</small>
                                            <span class="badge badge-primary badge-pill" title="seed">@team.SeedNumber</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    }
                    else
                    {
                        <p>No teams are currently participating in this tournament.</p>
                    }
                </div>
            </div>
        </div>
    </div>
