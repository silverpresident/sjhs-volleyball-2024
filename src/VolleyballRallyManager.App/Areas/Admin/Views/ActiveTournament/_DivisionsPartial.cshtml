@model List<VolleyballRallyManager.Lib.Models.TournamentDivisionViewModel>

<div class="table-responsive">
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>Division</th>
                <th>Groups</th>
                <th>Teams</th>
                <th>Matches Played</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var division in Model)
            {
                <tr>
                    <td><strong>@division.DivisionName</strong></td>
                    <td>
                        @if (division.GroupNames.Any())
                        {
                            <small class="text-muted">@string.Join(", ", division.GroupNames)</small>
                        }
                        else
                        {
                            <small class="text-muted">-</small>
                        }
                    </td>
                    <td>
                        <span class="badge bg-primary">@division.TeamCount</span>
                    </td>
                    <td>
                        <span class="badge bg-success">@division.MatchesPlayed / @division.MatchCount</span>
                    </td>
                    <td>
                        @if(division.RoundsCount > 0){
                            <a class="btn btn-sm btn-dark" asp-controller="TournamentRounds" asp-action="Index" asp-route-DivisionId="@division.DivisionId">
                                <i class="bi bi-trophy"></i> Rounds (@division.RoundsCount)
                            </a>
                        } else {
                        <a class="btn btn-info w-100" asp-controller="TournamentRounds" asp-action="CreateFirstRound" asp-route-DivisionId="@division.DivisionId">
                            <i class="bi bi-play-circle"></i> Create First Round
                        </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>