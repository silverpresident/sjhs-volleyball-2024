@model VolleyballRallyManager.Lib.Models.TournamentTeamDetailsViewModel

@{
    ViewData["Title"] = "Team Details";
}

<div class="container mt-4">
    <h2 class="mb-4">@Model.Team.Team?.Name</h2>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-success text-white">
            <h5 class="mb-0">Team Information</h5>
            <div class="team-color" style="width: 30px; height: 30px; border-radius: 50%; background-color: @Model.Team.Team?.Color; border: 2px solid white;"></div>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">School</dt>
                <dd class="col-sm-9">@Model.Team.Team?.School</dd>

                <dt class="col-sm-3">Division</dt>
                <dd class="col-sm-9">@Model.Division?.Name</dd>

                <dt class="col-sm-3">Group</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Team.GroupName) ? "N/A" : Model.Team.GroupName)</dd>
                
                <dt class="col-sm-3">Seed Number</dt>
                <dd class="col-sm-9">@Model.Team.SeedNumber</dd>

                <dt class="col-sm-3">Entry Rating</dt>
                <dd class="col-sm-9">@Model.Team.Rating</dd>

                <dt class="col-sm-3">Rank in tournament</dt>
                <dd class="col-sm-9">@Model.Team.Rank</dd>

                <dt class="col-sm-3">Ranking points in tournament</dt>
                <dd class="col-sm-9">@Model.Team.RankingPoints</dd>
                @if (!string.IsNullOrEmpty(Model.Team.Team?.LogoUrl))
                {
                    <dt class="col-sm-3">Logo</dt>
                    <dd class="col-sm-9">
                        <img src="@Model.Team.Team?.LogoUrl" alt="Team Logo" class="img-fluid" style="max-width: 150px;" />
                    </dd>
                }
            </dl>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Tournament Statistics</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-6">Matches Played</dt>
                        <dd class="col-sm-6"><strong>@Model.Team.MatchesPlayed</strong></dd>

                        <dt class="col-sm-6">Wins</dt>
                        <dd class="col-sm-6"><span class="badge bg-success">@Model.Team.Wins</span></dd>

                        <dt class="col-sm-6">Draws</dt>
                        <dd class="col-sm-6"><span class="badge bg-secondary">@Model.Team.Draws</span></dd>

                        <dt class="col-sm-6">Losses</dt>
                        <dd class="col-sm-6"><span class="badge bg-danger">@Model.Team.Losses</span></dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-6">Total Points</dt>
                        <dd class="col-sm-6"><strong class="text-success">@Model.Team.TotalPoints</strong></dd>

                        <dt class="col-sm-6">Points Scored</dt>
                        <dd class="col-sm-6">@Model.Team.ScoreFor</dd>

                        <dt class="col-sm-6">Points Conceded</dt>
                        <dd class="col-sm-6">@Model.Team.ScoreAgainst</dd>

                        <dt class="col-sm-6">Point Difference</dt>
                        <dd class="col-sm-6">
                            <span class="@(Model.Team.ScoreDifference >= 0 ? "text-success" : "text-danger")">
                                @(Model.Team.ScoreDifference >= 0 ? "+" : "")@Model.Team.ScoreDifference
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Match History</h5>
        </div>
        <div class="card-body">
            @if (Model.Matches.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Date & Time</th>
                                <th>Round</th>
                                <th>Home Team</th>
                                <th>Score</th>
                                <th>Away Team</th>
                                <th>Court</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var match in Model.Matches)
                            {
                                var isHomeTeam = match.HomeTeamId == Model.Team.TeamId;
                                var isWin = match.IsFinished && ((isHomeTeam && match.HomeTeamScore > match.AwayTeamScore) || (!isHomeTeam && match.AwayTeamScore > match.HomeTeamScore));
                                var isLoss = match.IsFinished && ((isHomeTeam && match.HomeTeamScore < match.AwayTeamScore) || (!isHomeTeam && match.AwayTeamScore < match.HomeTeamScore));
                                var isDraw = match.IsFinished && match.HomeTeamScore == match.AwayTeamScore;
                                var rowClass = isWin ? "table-success" : (isLoss ? "table-danger" : (isDraw ? "table-warning" : ""));
                                
                                <tr class="@rowClass">
                                    <td>@match.ScheduledTime.ToString("ddd, dd MMM yyyy HH:mm")</td>
                                    <td>@match.Round?.Name</td>
                                    <td>
                                        @if (isHomeTeam)
                                        {
                                            <strong>@match.HomeTeam?.Name</strong>
                                        }
                                        else
                                        {
                                            @match.HomeTeam?.Name
                                        }
                                    </td>
                                    <td>
                                        @if (match.IsFinished)
                                        {
                                            <strong>@match.HomeTeamScore - @match.AwayTeamScore</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">vs</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!isHomeTeam)
                                        {
                                            <strong>@match.AwayTeam?.Name</strong>
                                        }
                                        else
                                        {
                                            @match.AwayTeam?.Name
                                        }
                                    </td>
                                    <td>@match.CourtLocation</td>
                                    <td>
                                        @if (match.IsFinished)
                                        {
                                            if (isWin)
                                            {
                                                <span class="badge bg-success">Won</span>
                                            }
                                            else if (isLoss)
                                            {
                                                <span class="badge bg-danger">Lost</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Draw</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Scheduled</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center py-4">No matches found for this team in the active tournament.</p>
            }
        </div>
    </div>

    <div class="mb-4">
        <a asp-action="Edit" asp-route-id="@Model.Team.TeamId" class="btn btn-custom">
            <i class="bi bi-pencil"></i> Edit Team
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Teams List
        </a>
    </div>
</div>
