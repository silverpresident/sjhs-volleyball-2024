@model IEnumerable<VolleyballRallyManager.Lib.Models.TournamentTeamDivision>

@{
    ViewData["Title"] = "Tournament Teams";
}
 
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Teams in Tournament</h1>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col">
                    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Team</a>
                    <a asp-action="BulkAssign" class="btn btn-success"><i class="bi bi-list-check"></i> Bulk Assign Teams</a>
                    <a asp-action="AutoSeed" class="btn btn-warning"><i class="bi bi-shuffle"></i> Auto Seed Teams</a>
                </div>
                <div class="col-auto">
                    <div class="btn-group divisions-filter" role="group">
                        @if(ViewBag.Divisions != null){
                            <button  type="button" class="btn btn-outline-secondary" data-division-id="">All</button>
                            @foreach(TournamentDivision division in ViewBag.Divisions){
                                <button  type="button" class="btn btn-outline-secondary" data-division-id="@division.DivisionId">@division.Division.Name</button>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Actions</th>
                            <th>@Html.DisplayNameFor(model => model.Team.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Division)</th>
                            <th>@Html.DisplayNameFor(model => model.Rating)</th>
                            <th>@Html.DisplayNameFor(model => model.SeedNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.MatchesPlayed)</th>
                            <th>@Html.DisplayNameFor(model => model.Wins)</th>
                            <th>@Html.DisplayNameFor(model => model.Losses)</th>
                            <th>@Html.DisplayNameFor(model => model.TotalPoints)</th>
                            <th>@Html.DisplayNameFor(model => model.Rank)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-divisionId="@item.Division.Id" data-division="@item.Division.Name">
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.TeamId" class="btn btn-sm btn-outline-primary" title="Edit"><i class="bi bi-pencil"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.TeamId" class="btn btn-sm btn-outline-info" title="Details"><i class="bi bi-info-circle"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.TeamId" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.Team.Name)
                                <small>(@Html.DisplayFor(modelItem => item.Team.School))</small>
                                </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.Division.Name)
                                @Html.DisplayFor(modelItem => item.GroupName, "Group")
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                                <td>@Html.DisplayFor(modelItem => item.SeedNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.MatchesPlayed)</td>
                                <td>@Html.DisplayFor(modelItem => item.Wins)</td>
                                <td>@Html.DisplayFor(modelItem => item.Losses)</td>
                                <td>@Html.DisplayFor(modelItem => item.TotalPoints)</td>
                                <td>@Html.DisplayFor(modelItem => item.Rank, "Rank")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            $('.divisions-filter').on('click','button',function() {
                $('.divisions-filter button').removeClass('active');
                $(this).addClass('active');
                const divisionId = $(this).data('division-id');
                console.log("divisions-filter divisionId", divisionId);
                if (divisionId === '') {
                    $('tbody tr').show();
                } else {
                    $('tbody tr').hide();
                    $('tbody tr[data-divisionId="' + divisionId + '"]').show();
                }
            });
        });
    </script>
}
