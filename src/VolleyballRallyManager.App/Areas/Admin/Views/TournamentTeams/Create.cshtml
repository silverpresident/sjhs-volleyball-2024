@model VolleyballRallyManager.Lib.Models.TournamentTeamDivision

@{
    ViewData["Title"] = "Add Team to Division";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-4">
        <div class="card">
        <div class="card-header">
            <h1>Add Team to Division</h1>
        </div>
            <div class="card-body">
                <form asp-action="Create" asp-route-divisionId="@ViewBag.DivisionId">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TeamId" class="control-label"></label>
                        <select asp-for="TeamId" class="form-control" asp-items="@(ViewBag.TeamId as SelectList)"></select>
                        <span asp-validation-for="TeamId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Team" class="btn btn-primary" />
                        <a asp-action="Index" asp-route-divisionId="@ViewBag.DivisionId" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
