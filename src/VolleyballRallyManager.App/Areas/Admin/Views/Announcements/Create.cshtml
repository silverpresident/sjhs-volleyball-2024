@model VolleyballRallyManager.Lib.Models.Announcement

@{
    ViewData["Title"] = "Create Announcement";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4><i class="bi bi-plus-circle"></i> Create New Announcement</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter announcement title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label"></label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Enter announcement content"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Priority" class="form-label"></label>
                            <select asp-for="Priority" class="form-select" asp-items="Html.GetEnumSelectList<VolleyballRallyManager.Lib.Models.AnnouncementPriority>()">
                            </select>
                            <small class="form-text text-muted">
                                <strong>Urgent:</strong> Added after last urgent item<br />
                                <strong>Info/Routine:</strong> Added to end of queue
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RemainingRepeatCount" class="form-label"></label>
                            <input asp-for="RemainingRepeatCount" class="form-control" type="number" min="1" max="100" />
                            <span asp-validation-for="RemainingRepeatCount" class="text-danger"></span>
                            <small class="form-text text-muted">Number of times this announcement should be called</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
