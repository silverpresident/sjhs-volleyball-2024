@model VolleyballRallyManager.Lib.Models.Announcement

@{
    ViewData["Title"] = "Delete Announcement";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle"></i> Delete Announcement</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this announcement?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Content</dt>
                        <dd class="col-sm-9">@Model.Content</dd>

                        <dt class="col-sm-3">Priority</dt>
                        <dd class="col-sm-9">
                            @switch (Model.Priority)
                            {
                                case VolleyballRallyManager.Lib.Models.AnnouncementPriority.Urgent:
                                    <span class="badge bg-danger">Urgent</span>
                                    break;
                                case VolleyballRallyManager.Lib.Models.AnnouncementPriority.Info:
                                    <span class="badge bg-info">Info</span>
                                    break;
                                case VolleyballRallyManager.Lib.Models.AnnouncementPriority.Routine:
                                    <span class="badge bg-secondary">Routine</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-3">Sequencing Number</dt>
                        <dd class="col-sm-9">@Model.SequencingNumber</dd>

                        <dt class="col-sm-3">Remaining Repeats</dt>
                        <dd class="col-sm-9">@Model.RemainingRepeatCount</dd>

                        <dt class="col-sm-3">Announced Count</dt>
                        <dd class="col-sm-9">@Model.AnnouncedCount</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsHidden)
                            {
                                <span class="badge bg-secondary">Hidden</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("MM/dd/yyyy HH:mm")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
