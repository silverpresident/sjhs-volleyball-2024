@model VolleyballRallyManager.App.Areas.Admin.Models.RoundsIndexViewModel
@{
    ViewData["Title"] = "Round Templates";
}

<link rel="stylesheet" href="~/css/rounds-index.css" />

<div class="rounds-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1><i class="bi bi-calendar3"></i> Round Templates</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Round Template
        </a>
    </div>
    <p class="text-muted mt-2">
        Manage round templates that define recommended settings for tournament rounds. 
        These templates serve as blueprints that can be customized when creating actual tournament rounds.
    </p>
</div>

@if (Model.Rounds.Any())
{
    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle"></i> <strong>@Model.TotalRounds</strong> round template(s) configured
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var round in Model.Rounds)
        {
            <div class="col">
                <div class="card h-100 @(round.IsPlayoff ? "border-warning" : "")">
                    <div class="card-header @(round.IsPlayoff ? "bg-warning text-dark" : "text-bg-primary")">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@round.Name</h5>
                            <span class="badge bg-light text-dark">Seq #@round.Sequence</span>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (round.IsPlayoff)
                        {
                            <div class="mb-3">
                                <span class="badge bg-warning text-dark fs-6">
                                    <i class="bi bi-trophy"></i> Playoff Round
                                </span>
                            </div>
                        }

                        <h6 class="text-muted mb-3">Recommended Configuration</h6>

                        <dl class="row mb-0">
                            <dt class="col-sm-6 small">Match Strategy:</dt>
                            <dd class="col-sm-6 small">
                                <span class="badge bg-secondary">@round.RecommendedMatchGenerationStrategy</span>
                            </dd>

                            <dt class="col-sm-6 small">Team Selection:</dt>
                            <dd class="col-sm-6 small">
                                <span class="badge bg-secondary">@round.RecommendedTeamSelectionStrategy</span>
                            </dd>

                            <dt class="col-sm-6 small">Qualifying Teams:</dt>
                            <dd class="col-sm-6 small">
                                @if (round.RecommendedQualifyingTeamsCount == 0)
                                {
                                    <span class="badge bg-info">All Teams</span>
                                }
                                else
                                {
                                    <strong>@round.RecommendedQualifyingTeamsCount</strong>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@round.Id" class="btn btn-sm btn-primary flex-grow-1">
                                <i class="bi bi-pencil"></i> Edit
                            </a> 
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-calendar-x" style="font-size: 4rem; color: #ccc;"></i>
        <h3 class="mt-3">No Round Templates Found</h3>
        <p class="text-muted">Create round templates to define recommended settings for tournament rounds.</p>
        <a asp-action="Create" class="btn btn-success mt-3">
            <i class="bi bi-plus-circle"></i> Create First Round Template
        </a>
    </div>
}
