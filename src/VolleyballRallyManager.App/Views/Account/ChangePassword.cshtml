@model VolleyballRallyManager.App.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-success">Change Password</h2>
                        <p class="text-muted">Update your account password</p>
                    </div>

                    <!-- Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Error Messages -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <!-- Change Password Form -->
                    <form asp-controller="Account" asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label fw-semibold">Current Password</label>
                            <input asp-for="CurrentPassword" class="form-control form-control-lg" placeholder="Enter your current password" autocomplete="current-password" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold">New Password</label>
                            <input asp-for="NewPassword" class="form-control form-control-lg" placeholder="Enter your new password" autocomplete="new-password" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            <div class="form-text">Password must be at least 6 characters long</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm your new password" autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg fw-semibold">
                                Change Password
                            </button>
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>

                    <!-- Info Note -->
                    <div class="alert alert-info mt-4 mb-0" role="alert">
                        <small>
                            <strong>Note:</strong> If you signed in with Google or Microsoft, you may not have a current password. 
                            In that case, you can set a password by leaving the "Current Password" field empty.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Custom styling for the change password page with green and gold theme */
    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }

    .btn-success:hover {
        background-color: #157347;
        border-color: #146c43;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

    .text-success {
        color: #198754 !important;
    }

    .card {
        border: none;
        border-radius: 12px;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
    }

    .alert-info {
        background-color: #e7f3ff;
        border-color: #b8daff;
        color: #004085;
    }
</style>
