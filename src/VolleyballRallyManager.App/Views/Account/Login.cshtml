@model VolleyballRallyManager.App.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-success">Welcome Back</h2>
                        <p class="text-muted">Sign in to access the Volleyball Rally Manager</p>
                    </div>

                    <!-- Error Messages -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Google Sign In (Primary Option) -->
                    <div class="mb-4">
                        <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="provider" value="Google" />
                            <button type="submit" class="btn btn-outline-danger btn-lg w-100 d-flex align-items-center justify-content-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
                                </svg>
                                Sign in with Google
                            </button>
                        </form>
                    </div>

                    <!-- Divider -->
                    <div class="d-flex align-items-center mb-4">
                        <hr class="flex-grow-1">
                        <span class="px-3 text-muted small">OR</span>
                        <hr class="flex-grow-1">
                    </div>

                    <!-- Traditional Login Form (Secondary Option) -->
                    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                            <input asp-for="Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">Password</label>
                            <input asp-for="Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label">
                                Remember me on this device
                            </label>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 fw-semibold">
                            Sign In
                        </button>
                    </form>

                    <!-- Footer Note -->
                    <div class="text-center mt-4">
                        <p class="text-muted small mb-0">
                            By signing in, you agree to our Terms of Service and Privacy Policy
                        </p>
                    </div>
                </div>
            </div>

            <!-- Return URL Info (for debugging in development) -->
            @if (Model.ReturnUrl != null && ViewContext.HttpContext.Request.Host.Host == "localhost")
            {
                <div class="text-center mt-3">
                    <small class="text-muted">Return URL: @Model.ReturnUrl</small>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Custom styling for the login page with green and gold theme */
    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }

    .btn-success:hover {
        background-color: #157347;
        border-color: #146c43;
    }

    .btn-outline-danger {
        border-width: 2px;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .text-success {
        color: #198754 !important;
    }

    .card {
        border: none;
        border-radius: 12px;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
    }

    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }

    hr {
        opacity: 0.15;
    }
