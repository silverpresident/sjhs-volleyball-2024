@model VolleyballRallyManager.App.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    @if (Model.ActiveTournament != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4" style="background: linear-gradient(135deg, #2d5016 0%, #1f3810 100%);">
                        <div class="row align-items-center text-white">
                            <div class="col-md-8">
                                <h3 class="mb-2">
                                    <i class="bi bi-trophy-fill me-2" style="color: #ffd700;"></i>
                                    @Model.ActiveTournament.Name
                                </h3>
                                <a class="btn btn-outline-primary" asp-controller="Tournament">
                                    <i class="bi bi-info-circle"></i>
                                    View Tournament Details
                                </a> 
                            </div>
                            <div class="col-md-4 text-md-end">
                                <div class="d-flex flex-column align-items-md-end">
                                    <div>
                                    
            @if (Model.ActiveTournament?.RegistrationUrl != null)
            {
                <div class="registration-info">
                    <a href="@Model.ActiveTournament.RegistrationUrl" target="_blank" class="registration-link">
                        üìù Register for Tournament
                    </a>
                </div>
            }
                                        <i class="bi bi-calendar-event me-2" style="color: #ffd700;"></i>
                                        <strong>Date:</strong> @Model.ActiveTournament.TournamentDate.ToString("MMM dd, yyyy")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Total Teams</h5>
                            <h2 class="display-4">@Model.TotalTeams</h2>
                            <div class="mt-3">
                                @foreach (var division in Model.TeamsByDivision)
                                {
                                    <div class="d-flex justify-content-between">
                                        <span>@division.Key</span>
                                        <span>@division.Value teams</span>
                                    </div>
                                }
                            </div>
                        </div>
                        <div>
                            <i class="bi bi-people fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-primary bg-opacity-75">
                    <a asp-controller="Teams" asp-action="Index" class="text-white text-decoration-none">
                        View All <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title text-uppercase mb-0">Total Matches</h6>
                                    <h2 class="mb-0">@Model.TotalMatches</h2>
                                </div>
                                <div>
                                    <i class="bi bi-trophy fs-1"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-success bg-opacity-75">
                            <a asp-controller="Matches" asp-action="Index" class="text-white text-decoration-none">
                                View All <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h5 class="card-title">In Progress</h5>
                            <h2 class="display-4">@Model.MatchesInProgress</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-secondary text-white">
                        <div class="card-body">
                            <h5 class="card-title">Finished</h5>
                            <h2 class="display-4">@Model.MatchesFinished</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-warning">
                        <div class="card-body">
                            <h5 class="card-title">Disputed</h5>
                            <h2 class="display-4">@Model.DisputedMatches</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Matches</h5>
                    <div class="btn-group">
                    <a asp-controller="Matches" asp-action="Index" class="btn btn-sm btn-outline-primary">View Matches</a>
                    <a asp-controller="Updates" asp-action="Index" class="btn btn-sm btn-outline-primary">View Updates</a>
                </div>
                </div>
                <div class="card-body">
                    @if (Model.RecentMatches.Any())
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Time</th>
                                        <th>Teams</th>
                                        <th>Score</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var match in Model.RecentMatches)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Matches" asp-action="Details" asp-route-id="@match.Id" class="btn btn-sm btn-outline-info" title="Details">
                                                    <i class="bi bi-info-circle"></i>
                                                </a>
                                            </td>
                                            <td>@match.ScheduledTime.ToString("HH:mm")</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="team-color me-2" style="background-color: @match.HomeTeam?.Color;"></span>
                                                    @match.HomeTeam?.Name
                                                    <span class="mx-2">vs</span>
                                                    <span class="team-color me-2" style="background-color: @match.AwayTeam?.Color;"></span>
                                                    @match.AwayTeam?.Name
                                                </div>
                                            </td>
                                            <td>
                                                @if (match.IsFinished)
                                                {
                                                    <strong>@match.HomeTeamScore - @match.AwayTeamScore</strong>
                                                }
                                                else if (match.ActualStartTime.HasValue)
                                                {
                                                    @match.HomeTeamScore <text> - </text> @match.AwayTeamScore
                                                }
                                                else
                                                {
                                                    <text>vs</text>
                                                }
                                            </td>
                                            <td>
                                                @if (match.IsDisputed)
                                                {
                                                    <span class="badge bg-danger">Disputed</span>
                                                }
                                                else if (match.IsFinished)
                                                {
                                                    <span class="badge bg-success">Finished</span>
                                                }
                                                else if (match.ActualStartTime.HasValue)
                                                {
                                                    <span class="badge bg-primary">In Progress</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Scheduled</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No matches found.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Announcements</h5>
                    <a asp-controller="Bulletin" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentBulletins.Any())
                    {
                        foreach (var bulletin in Model.RecentBulletins)
                        {
                            <div class="bulletin-item mb-3 pb-3 border-bottom">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-@bulletin.Priority.ToString().ToLower()">@bulletin.Priority</span>
                                    <small class="text-muted">@bulletin.CreatedAt.ToString("HH:mm")</small>
                                </div>
                                @if (bulletin.UseMarkdown)
                                {
                                    <div class="markdown-content">@Html.Raw(bulletin.RenderedContent)</div>
                                }
                                else
                                {
                                    <p class="mb-0">@bulletin.Content</p>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No bulletins found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh the page every 2 minutes
        setTimeout(function() {
            location.reload();
        }, 120000);
    </script>
}
