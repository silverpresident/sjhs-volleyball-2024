@model VolleyballRallyManager.Lib.Models.Match

@{
    ViewData["Title"] = "Match Details";
}

<div class="container">
    <h1>Match Details</h1>
    <div class="card">
        <div class="card-body">
            <h4>@Model.Team1Id vs @Model.Team2Id</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Division</dt>
                <dd class="col-sm-10">@Model.DivisionId</dd>
                <dt class="col-sm-2">Group</dt>
                <dd class="col-sm-10">@Model.GroupId</dd>
                <dt class="col-sm-2">Round</dt>
                <dd class="col-sm-10">@Model.RoundId</dd>
                <dt class="col-sm-2">Score</dt>
                <dd class="col-sm-10">@Model.Team1Score - @Model.Team2Score</dd>
            </dl>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            Match Updates
        </div>
        <div class="card-body">
            <ul id="updates-list"></ul>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/matchhub")
            .build();

        connection.on("ReceiveUpdate", (user, message) => {
            const msg = message.replace(/&/g, "&").replace(/</g, "<").replace(/>/g, ">");
            const encodedMsg = user + ": " + msg;
            const li = document.createElement("li");
            li.textContent = encodedMsg;
            document.getElementById("updates-list").appendChild(li);
        });

        connection.start().catch(err => console.error(err.toString()));
    </script>
}
