@model VolleyballRallyManager.Lib.Models.TournamentTeamDetailsViewModel
@using VolleyballRallyManager.Lib.Models

@{
    ViewData["Title"] = "Team Details";
    var matches = Model.Matches as List<Match> ?? new List<Match>();

    // Calculate team statistics
    var finishedMatches = matches.Where(m => m.IsFinished).ToList();
    var wins = finishedMatches.Count(m =>
    (m.HomeTeamId == Model.Team.TeamId && m.HomeTeamScore > m.AwayTeamScore) ||
    (m.AwayTeamId == Model.Team.TeamId && m.AwayTeamScore > m.HomeTeamScore));
    var losses = finishedMatches.Count(m =>
    (m.HomeTeamId == Model.Team.TeamId && m.HomeTeamScore < m.AwayTeamScore) ||
    (m.AwayTeamId == Model.Team.TeamId && m.AwayTeamScore < m.HomeTeamScore));
    var draws = finishedMatches.Count(m => m.HomeTeamScore == m.AwayTeamScore);

    var totalSetsWon = 0;
    var totalSetsLost = 0;
    foreach (var match in finishedMatches)
    {
        if (match.HomeTeamId == Model.Team.TeamId)
        {
            totalSetsWon += match.HomeTeamScore;
            totalSetsLost += match.AwayTeamScore;
        }
        else
        {
            totalSetsWon += match.AwayTeamScore;
            totalSetsLost += match.HomeTeamScore;
        }
    }
    string scheduledTimeFormat = Model.Team.Tournament?.IsMultiDay == true ? "MMM dd, HH:mm" : "HH:mm";
}

<div class="container my-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Teams</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Team.Team.Name</li>
                </ol>
            </nav>
        </div>
    </div>
    @*
    TODO display rank when implemented
    @Html.DisplayFor(modelItem => team.Rank, "Rank")
    *@

    <!-- Team Header Card -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="mb-2 text-custom">
                        <i class="bi bi-people-fill me-2"></i>@Model.Team.Team.Name
                    </h1>
                    <p class="text-muted mb-0">
                        <span class="badge text-bg-custom me-2">@Model.Team.Division.Name</span>
                        @if (!string.IsNullOrEmpty(Model.Team.GroupName))
                        {
                            <span class="badge bg-secondary">Group @Model.Team.GroupName</span>
                        }
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="text-custom">
                        <div class="h2 mb-0">@wins-@losses@(draws > 0 ? $"-{draws}" : "")</div>
                        <small class="text-muted">Win-Loss@(draws > 0 ? "-Draw" : "") Record</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Row -->
    <div class="row mb-4">
        <div class="col-md-6">
            <!-- Statistics Highlight Card -->
            <div class="row mb-4">
                <div class="col mb-3">
                    <div class="card border-0 shadow-sm h-100 stat-card">
                        <div class="card-body text-center">
                            <i class="bi bi-trophy-fill display-4 text-success mb-2"></i>
                            <h3 class="mb-0">@wins</h3>
                            <small class="text-muted">Wins</small>
                        </div>
                    </div>
                </div>
                <div class="col mb-3">
                    <div class="card border-0 shadow-sm h-100 stat-card">
                        <div class="card-body text-center">
                            <i class="bi bi-x-circle-fill display-4 text-danger mb-2"></i>
                            <h3 class="mb-0">@losses</h3>
                            <small class="text-muted">Losses</small>
                        </div>
                    </div>
                </div>
                <div class="col mb-3">
                    <div class="card border-0 shadow-sm h-100 stat-card">
                        <div class="card-body text-center">
                            <i class="bi bi-arrow-up-circle-fill display-4 text-custom mb-2"></i>
                            <h3 class="mb-0">@totalSetsWon</h3>
                            <small class="text-muted">Sets Won</small>
                        </div>
                    </div>
                </div>
                <div class="col mb-3">
                    <div class="card border-0 shadow-sm h-100 stat-card">
                        <div class="card-body text-center">
                            <i class="bi bi-arrow-down-circle-fill display-4 text-warning mb-2"></i>
                            <h3 class="mb-0">@totalSetsLost</h3>
                            <small class="text-muted">Sets Lost</small>
                        </div>
                    </div>
                </div>
                <div class="col mb-3">
                    <div class="card border-0 shadow-sm h-100 stat-card">
                        <div class="card-body text-center">
                            <h3 class="mb-0">@Html.DisplayFor(modelItem => Model.Team.Rank, "Rank")</h3>
                            <small class="text-muted">Tournament Rank</small>
                        </div>
                    </div>
                </div>
                <div class="col mb-3">
                    <div class="card border-0 shadow-sm h-100 stat-card">
                        <div class="card-body text-center">
                            <h3 class="mb-0">@Html.DisplayFor(modelItem => Model.Team.TotalPoints)</h3>
                            <small class="text-muted">Total Ranking Points</small>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <!-- Statistics Details -->

            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Matches Won:</dt>
                        <dd class="col-sm-7">
                            <strong>@Model.Team.Wins</strong>
                            -
                            <strong>@Model.Team.Losses</strong>
                            -
                            <strong>@Model.Team.Draws</strong>
                            (W-L-D)
                        </dd>

                        <dt class="col-sm-5">Matches Played:</dt>
                        <dd class="col-sm-7"><strong>@Model.Team.MatchesPlayed</strong></dd>

                        <dt class="col-sm-5">Sets Won:</dt>
                        <dd class="col-sm-7"><strong>@Model.Team.SetsFor</strong></dd>

                        <dt class="col-sm-5">Sets Lost:</dt>
                        <dd class="col-sm-7"><strong>@Model.Team.SetsAgainst</strong></dd>

                        <dt class="col-sm-5">Sets Difference:</dt>
                        <dd class="col-sm-7"><strong>@Html.DisplayFor(modelItem =>
                                Model.Team.SetsDifference,"Difference")</strong></dd>

                        <dt class="col-sm-5">Points Won:</dt>
                        <dd class="col-sm-7"><strong>@Model.Team.ScoreFor</strong></dd>

                        <dt class="col-sm-5">Points Lost:</dt>
                        <dd class="col-sm-7"><strong>@Model.Team.ScoreAgainst</strong></dd>

                        <dt class="col-sm-5">Points Difference:</dt>
                        <dd class="col-sm-7"><strong>@Html.DisplayFor(modelItem =>
                                Model.Team.ScoreDifference,"Difference")</strong></dd>

                    </dl>
                </div>
            </div>
        </div>

    </div>
    <!-- Match Results Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header text-bg-custom">
            <i class="bi bi-calendar-event me-2"></i>Match Results (@matches.Count)
        </div>
        <div class="card-body p-0">
            @if (matches.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Match #</th>
                                <th>Round</th>
                                <th class="text-center">Status</th>
                                <th>Opponent</th>
                                <th class="text-center">Result</th>
                                <th>Court</th>
                                <th>Date/Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var match in matches.OrderByDescending(m => m.ScheduledTime))
                            {
                                var isHomeTeam = match.HomeTeamId == Model.Team.TeamId;
                                var opponent = isHomeTeam ? match.AwayTeam?.Name : match.HomeTeam?.Name;
                                var teamScore = isHomeTeam ? match.HomeTeamScore : match.AwayTeamScore;
                                var opponentScore = isHomeTeam ? match.AwayTeamScore : match.HomeTeamScore;


                                // Determine result
                                string resultClass = "";
                                string resultText = "-";
                                if (match.IsFinished)
                                {
                                    if (teamScore > opponentScore)
                                    {
                                        resultClass = "text-success fw-bold";
                                        resultText = "W";
                                    }
                                    else if (teamScore < opponentScore)
                                    {
                                        resultClass = "text-danger fw-bold";
                                        resultText = "L";
                                    }
                                    else
                                    {
                                        resultClass = "text-warning fw-bold";
                                        resultText = "D";
                                    }
                                }

                                <tr>
                                    <td class="text-end">
                                        <a asp-controller="Matches" asp-action="Details" asp-route-id="@match.Id"
                                            class="btn btn-sm btn-outline-custom">
                                            <strong class="fw-bold">#@match.MatchNumber</strong>
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-controller="Rounds" asp-action="Details" asp-route-id="@match.TournamentRoundId"
                                            class="btn btn-sm btn-outline-custom">
                                            @match.Round?.Name
                                        </a>
                                        @Html.DisplayFor(modelItem => match.GroupName, "Group")
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => match.MatchState, "MatchState")
                                    </td>
                                    <td>
                                        <strong>@(isHomeTeam ? "vs" : "@")</strong> @opponent

                                        <a asp-controller="Teams" asp-action="Details"
                                            asp-route-id="@(isHomeTeam ? match.AwayTeamId : match.HomeTeamId)"
                                            class="btn btn-sm btn-outline-custom">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        @if (match.IsFinished || match.ActualStartTime.HasValue)
                                        {
                                            <span class="@resultClass">
                                                @if (match.IsFinished)
                                                {
                                                    @resultText
                                                    <span class="text-muted ms-1">(@teamScore-@opponentScore)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@teamScore-@opponentScore</span>
                                                }
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(match.CourtLocation))
                                        {
                                            <small><i class="bi bi-geo-alt"></i> @match.CourtLocation</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">TBD</small>
                                        }
                                    </td>
                                    <td>
                                        <small>@match.ScheduledTime.ToString(scheduledTimeFormat)</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-inbox display-4 d-block mb-3"></i>
                    <p class="mb-0">No matches scheduled for this team yet.</p>
                </div>
            }
        </div>
    </div>

    <!-- Upcoming Matches -->
    @{
        var upcomingMatches = matches.Where(m => !m.IsFinished && m.ScheduledTime > DateTime.Now).OrderBy(m =>
        m.ScheduledTime).Take(3).ToList();
    }
    @if (upcomingMatches.Any())
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header text-bg-primary">
                <i class="bi bi-calendar-check me-2"></i>Upcoming Matches
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var match in upcomingMatches)
                    {
                        var isHomeTeam = match.HomeTeamId == Model.Team.TeamId;
                        var opponent = isHomeTeam ? match.AwayTeam?.Name : match.HomeTeam?.Name;

                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-body">
                                    <h6 class="card-title text-custom">Match #@match.MatchNumber</h6>
                                    <p class="card-text mb-2">
                                        <strong>@(isHomeTeam ? "vs" : "@")</strong> @opponent
                                    </p>
                                    <small class="text-muted d-block mb-1">
                                        <i class="bi bi-calendar"></i> @match.ScheduledTime.ToString(scheduledTimeFormat)
                                    </small>
                                    <small class="text-muted d-block mb-2">
                                        <i class="bi bi-geo-alt"></i> @(match.CourtLocation ?? "TBD")
                                    </small>
                                    <a asp-controller="Matches" asp-action="Details" asp-route-id="@match.Id"
                                        class="btn btn-sm btn-custom w-100">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Back Button -->
    <div class="mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Teams
        </a>
    </div>
</div>
