@model VolleyballRallyManager.Lib.Models.TournamentTeamDivision

@{
    ViewData["Title"] = "Team Details";
}

<div class="container">
    <h1>@Model.Team.Name Details</h1>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Division</dt>
                <dd class="col-sm-10">@Model.Division.Name</dd>
                <dt class="col-sm-2">Group</dt>
                <dd class="col-sm-10">@Model.GroupName</dd>
            </dl>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            Match Results
        </div>
        <div class="card-body">
            <ul id="match-results-list">
                @foreach (Match match in ViewBag.Matches)
                {
                    <li>@match.HomeTeam.Name vs @match.AwayTeam.Name: @match.HomeTeamScore - @match.AwayTeamScore</li>
                }
            </ul>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/matchhub")
            .build();

        connection.on("ReceiveUpdate", (user, message) => {
            const msg = message.replace(/&/g, "&").replace(/</g, "<").replace(/>/g, ">");
            const encodedMsg = user + ": " + msg;
            const li = document.createElement("li");
            li.textContent = encodedMsg;
            document.getElementById("match-results-list").appendChild(li);
        });

        connection.start().catch(err => console.error(err.toString()));
    </script>
}
