@model IEnumerable<VolleyballRallyManager.Lib.Models.TournamentTeamDivision>

@{
    ViewData["Title"] = "Teams";
}

<div class="container">
    
    
    
    <div class="card">
    <div class="card-header">
            <div class="row mb-3">
                <div class="col">
                <h1>Teams</h1>
                </div>
                <div class="col-auto">
                @if(ViewBag.Divisions != null){
                    <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-secondary active" asp-action="Index">All</button>
                        @foreach(Division division in ViewBag.Divisions){
                        <button type="button" class="btn btn-outline-secondary" asp-route-DivisionId="@division.Id">@division.Name</button>
                    }
                    </div>
                    }
                </div>
            </div>
            </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Division</th>
                        <th>Group</th>
                        <th>Name</th>
                        <th>W-L-D</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-link" asp-route-DivisionId="@item.DivisionId">
                                    @item.Division.Name
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-link" asp-route-DivisionId="@item.DivisionId" asp-route-GroupName="@item.GroupName">
                                    @item.GroupName
                                </a>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.TeamId">
                                @item.Team.Name
                                </a>
                            </td>
                            <td>
                                @item.Wins
                                -
                                @item.Losses
                                -
                                @item.Draws
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.TeamId">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
