@model VolleyballRallyManager.Lib.Models.Announcement
@using VolleyballRallyManager.Lib.Models

@{
    ViewData["Title"] = "Edit Announcement";
}

<div class="container">
    <h1>Edit Announcement</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Announcement Content</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Content" class="control-label"></label>
                            <textarea asp-for="Content" class="form-control" rows="5" id="announcementContent"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="UseMarkdown" class="form-check-input" type="checkbox" id="useMarkdown" />
                            <label asp-for="UseMarkdown" class="form-check-label">Use Markdown Formatting</label>
                            <span asp-validation-for="UseMarkdown" class="text-danger"></span>
                        </div>

                        <div id="markdownPreview" class="card @(Model.UseMarkdown ? "" : "d-none")">
                            <div class="card-header">
                                Preview
                            </div>
                            <div class="card-body">
                                <div id="previewContent">@Html.Raw(Model.RenderedContent)</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Priority" class="control-label"></label>
                            <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<AnnouncementPriority>()"></select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsVisible" class="form-check-input" type="checkbox" />
                            <label asp-for="IsVisible" class="form-check-label">Make Announcement Visible</label>
                            <span asp-validation-for="IsVisible" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Created</label>
                            <input type="text" class="form-control" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" readonly />
                        </div>

                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="form-group mt-2">
                                <label class="control-label">Last Updated</label>
                                <input type="text" class="form-control" value="@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Markdown Help</h5>
                </div>
                <div class="card-body">
                    <h6>Basic Syntax</h6>
                    <ul class="list-unstyled">
                        <li><code># Heading 1</code></li>
                        <li><code>## Heading 2</code></li>
                        <li><code>**bold**</code></li>
                        <li><code>*italic*</code></li>
                        <li><code>[link](url)</code></li>
                        <li><code>- list item</code></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/marked/4.0.2/marked.min.js"></script>
    <script>
        $(document).ready(function() {
            function updatePreview() {
                if ($('#useMarkdown').is(':checked')) {
                    $('#markdownPreview').removeClass('d-none');
                    var content = $('#announcementContent').val();
                    var html = marked.parse(content);
                    $('#previewContent').html(html);
                } else {
                    $('#markdownPreview').addClass('d-none');
                }
            }

            $('#useMarkdown').change(updatePreview);
            $('#announcementContent').on('input', updatePreview);
        });
    </script>
}
